<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="{{ app.request.basepath }}/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{ app.request.basepath }}/css/pet.css" rel="stylesheet">
    <link href="{{ app.request.basepath }}/css/drunken-parrot.css" rel="stylesheet">
    <title>AdopteUnPet - {% block title %}{% endblock %}</title>
</head>

<body>
    <div class="container">
        <nav class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-target">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('home') }}"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>MyMovies</a>
                </div>
            </div>
            <!-- /.container -->
        </nav>
        {% autoescape %}
        <div id="content">{% block content %}{% endblock %}</div>
        {% endautoescape %}
    </div>
    <div class = "navbar navbar-inverse navbar-fixed-bottom">
        <div class="container">
        <p class ="navbar-text" pull-left>Ce site est le fruit du travail de
            <a href="https://github.com/Variot">Anthony Variot</a></p>.
            </div>
    </div>

    <!-- jQuery -->

    <script src="{{ app.request.basepath }}/lib/jquery/jquery.min.js"></script>
    <!-- JavaScript Boostrap plugin -->
    <script src="{{ app.request.basepath }}/lib/bootstrap/js/bootstrap.min.js"></script>
<script>
$(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip(); 
});
</script>
</body>

</html>